# Base de datos PostgreSQL
DATABASE_URL=postgresql://sage_user:your_password@localhost:5432/sage_production
PGHOST=localhost
PGPORT=5432
PGDATABASE=sage_production
PGUSER=sage_user
PGPASSWORD=your_password_here

# Configuración de la aplicación
NODE_ENV=production
PORT=5000
MAX_FILE_SIZE=100MB
UPLOAD_TEMP_DIR=/tmp/sage_uploads

# Configuración de logs
LOG_LEVEL=info
LOG_DIR=/var/log/sage

# Configuración de archivos y rutas
EXECUTIONS_DIR=./executions
BACKUPS_DIR=./backups
UPLOADS_DIR=./uploads

# Configuración de Next.js
NEXT_TELEMETRY_DISABLED=1

# Configuración de seguridad (opcional)
# SECRET_KEY=your_secret_key_here
# ENCRYPTION_KEY=your_encryption_key_here

# Configuración de correo (completar según proveedor)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_FROM=noreply@your-domain.com

# Configuración de proveedores de nube (ejemplos)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1

# AZURE_STORAGE_CONNECTION_STRING=your_azure_connection_string
# AZURE_CONTAINER_NAME=your_container_name

# GCP_SERVICE_ACCOUNT_KEY_FILE=path/to/service-account-key.json
# GCP_BUCKET_NAME=your_gcp_bucket

# MINIO_ENDPOINT=your_minio_endpoint
# MINIO_ACCESS_KEY=your_minio_access_key
# MINIO_SECRET_KEY=your_minio_secret_key
# MINIO_BUCKET=your_minio_bucket

# Configuración SFTP (ejemplos)
# SFTP_HOST=your_sftp_host
# SFTP_PORT=22
# SFTP_USER=your_sftp_user
# SFTP_PASSWORD=your_sftp_password
# SFTP_PATH=/path/to/upload